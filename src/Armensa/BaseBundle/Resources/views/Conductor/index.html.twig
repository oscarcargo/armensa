{% extends '::base.html.twig' %}
{% block body -%}
    <div class="page-header">
    	<h1>Listado de Conductores</h1>     <a href="{{ path('conductor_new') }}" class="btn btn-primary btn-mini"> <i class="icon-plus icon-white"></i>
                Crear Nuevo
            </a>
        </div>
    <table class="data-tbl-simple table table-bordered table-condensed table-striped table-hover">
        <thead>
            <tr>

            	<th>Nombre del Conductor</th>

            	<th>Identificación</th>

            	<th>Telefono</th>

            	<th>Dirección</th>

                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('conductor_show', { 'id': entity.id }) }}">{{ entity.nombre}}</a></td>
                <td>{{ entity.identificacion }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.direccion }}</td>
                <td style="text-align:center"><a href="{{ path('conductor_show', { 'id': entity.id }) }}" > <i class="fa fa-eye"></i> </a><a href="{{ path('conductor_edit', { 'id': entity.id }) }}" ><i class="fa fa-pencil"></i> </a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
{% block javascripts -%}

{% endblock %}
